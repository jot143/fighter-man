# ============================================================
# Firefighter Server Configuration
# ============================================================

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=4100
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# ============================================================
# Qdrant Vector Database
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=sensor_windows

# Vector dimensions (foot: 18 values, accel: 9 values per reading)
# Window size: 10 readings = 180 foot + 90 accel = 270 dims
VECTOR_DIMENSION=270
WINDOW_SIZE_MS=500

# ============================================================
# Session Settings
# ============================================================
DEFAULT_SESSION_NAME=recording
DATA_RETENTION_DAYS=90

# ============================================================
# Device Authentication
# ============================================================
# Comma-separated list of allowed device keys
ALLOWED_DEVICE_KEYS=firefighter_pi_001,firefighter_pi_002
