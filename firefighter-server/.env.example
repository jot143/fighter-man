# ============================================================
# Firefighter Server Configuration
# ============================================================

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=4100
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# ============================================================
# Qdrant Vector Database
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=sensor_windows

# Vector dimensions (foot: 18 values, accel: 9 values per reading)
# Window size: 10 readings = 180 foot + 90 accel = 270 dims
VECTOR_DIMENSION=270
WINDOW_SIZE_MS=500

# ============================================================
# Session Settings
# ============================================================
DEFAULT_SESSION_NAME=recording
DATA_RETENTION_DAYS=90

# ============================================================
# PostgreSQL Database
# ============================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=firefighter
POSTGRES_USER=firefighter_user
POSTGRES_PASSWORD=dev_password

# Connection pool settings
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
POSTGRES_POOL_TIMEOUT=30
POSTGRES_POOL_RECYCLE=3600
POSTGRES_ECHO=false

# ============================================================
# Device Authentication
# ============================================================
# Comma-separated list of allowed device keys
ALLOWED_DEVICE_KEYS=firefighter_pi_001,firefighter_pi_002

# ============================================================
# Video Recording Configuration
# ============================================================
VIDEO_STORAGE_PATH=/app/data/videos
VIDEO_MAX_SIZE_MB=500
VIDEO_ALLOWED_FORMATS=webm
