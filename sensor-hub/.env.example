# ============================================================
# Sensor Hub - Environment Configuration
# ============================================================
# Copy this file to .env and update with your actual values
# Run 'sudo python scanner.py' to find BLE device MAC addresses

# ============================================================
# BLE Device MAC Addresses
# ============================================================

# Left foot pressure sensor (required)
LEFT_FOOT_MAC=XX:XX:XX:XX:XX:XX

# Right foot pressure sensor (optional - set to XX:XX:XX:XX:XX:XX to skip)
RIGHT_FOOT_MAC=XX:XX:XX:XX:XX:XX

# Accelerometer IMU sensor - WT901BLE67 (optional - set to XX:XX:XX:XX:XX:XX to skip)
ACCELEROMETER_MAC=XX:XX:XX:XX:XX:XX

# ============================================================
# Performance Tuning
# ============================================================

# Throttle: Process every Nth packet (1=no throttle, 2=half rate, 5=one-fifth rate)
FOOT_THROTTLE=2              # Foot sensor throttle (default: 2, ~10Hz from 20Hz)
ACCEL_THROTTLE=5             # Accelerometer throttle (default: 5, ~20Hz from 100Hz)

# Connection retry attempts (1-10)
CONNECTION_RETRIES=3         # Max connection attempts per device (default: 3)

# ============================================================
# Socket.IO Server Configuration
# ============================================================

SOCKETIO_SERVER_URL=http://localhost:4100
SOCKETIO_DEVICE_KEY=firefighter_pi_001
SOCKETIO_ENABLED=true
SOCKETIO_NAMESPACE=/iot

# ============================================================
# HTTP Fallback Webhooks (comma-separated URLs)
# ============================================================

WEBHOOK_FOOT_URLS=http://localhost:4100/api/foot
WEBHOOK_ACCEL_URLS=http://localhost:4100/api/accel

# ============================================================
# SQLite Database Configuration
# ============================================================

DB_FOOT_FILE=./database/foot.db
DB_ACCEL_FILE=./database/accel.db

# ============================================================
# Background Sender Settings
# ============================================================

SENDER_POLLING_INTERVAL=30   # Seconds between batch sends
SENDER_MAX_RECORDS=100       # Records per batch
SENDER_RETRY_BACKOFF_BASE=60 # Initial retry delay (seconds)
SENDER_MAX_BACKOFF=3600      # Maximum retry delay (seconds)
